{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                // necesario para que paths funcione
    "paths": {
      "@/*": ["./*"],
      "@env": ["expo-env.d.ts"]    // alias para tu módulo de env
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"               // declara aquí tu módulo @env
  ]
}
