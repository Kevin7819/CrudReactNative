{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",                // necessary for paths to work
    "paths": {
      "@/*": ["./*"],
      "@env": ["expo-env.d.ts"]    // alias for your env module
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"               // the module is declared  @env
  ]
}
